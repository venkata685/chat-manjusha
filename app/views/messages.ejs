<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>Chat</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.9.0/sweetalert2.min.css">
  </head>
  <body>
    <div class="container clearfix" style="width: 500px;">
      <div class="controls" style="border: none; width: 100%;">
          <a href="/logout" class="logout-btn" style="width: auto; padding: 13px; font-size: 12px;">Logout</a>
      </div>

      <div class="room" style="width: 100%;">
        <div class="room-header clearfix">
          <div class="room-about">
            <div class="room-title">Messages</div>
            <div class="room-num-rooms"><%= messages.length %> Message(s)</div>
          </div>
          <i class="fa fa-th-list"></i>
        </div> <!-- end room-header -->
        
        <div class="room-list">
          <table width="100%">
            <tr>
              <th align="left">Room</th>
              <th align="left">User</th>
              <th align="left">Message</th>
              <th  align="left" width=40></th>
            </tr>
            <% if(messages.length > 0) { %>
              <% messages.forEach(function(message) { %>
                  <tr>
                    <td><%= message.room_name%></td>
                    <td><%= message.username%></td>
                    <td id="msg_<%= message.id%>"><%= message.content%></td>
                    <td>
                      <span class="message-data-star <%if(starred_messages.includes(message.id)) {%>active<%}%>" data-message-id="<%= message.id%>"><a href="#"><i class="fa fa-star" aria-hidden="true"></i></a></span>
                      <span class="message-data-edit" data-message-id="<%= message.id%>"><a href="#"><i class="fa fa-edit" aria-hidden="true"></i></a></span>
    
                    </td>
                  </tr>
                <% }); %>
            <% } else { %>
              <p class="message" style="text-align: center; padding: 0; margin: 0;">Create your first Message!</p>
            <% } %>
          </table>
        </div> <!-- end room-list -->
      </div> <!-- end room -->

    </div> <!-- end container -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.9.0/sweetalert2.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
    <script>$(function(){app.messages()});</script>
  </body>
</html>
